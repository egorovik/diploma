- if controller_name != 'sessions'
  %p= link_to t("button.log_in"), new_session_path(resource_name), class: "btn btn-success"


- if devise_mapping.registerable? && controller_name != 'registrations'
  %p= link_to t("button.sign_up"), new_registration_path(resource_name), class: "btn btn-info"


- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %p= link_to t("button.forgot_your_password?"), new_password_path(resource_name), class: "btn btn-warning"


- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %p= link_to t("button.didn't_receive_confirmation_instructions?"), new_confirmation_path(resource_name), class: "btn btn-warning"



- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %p= link_to t("button.didn't_receive_unlock_instructions?"), new_unlock_path(resource_name), class: "btn btn-warning"



- if devise_mapping.omniauthable? 
  - resource_class.omniauth_providers.each do |provider|
    %p= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)


