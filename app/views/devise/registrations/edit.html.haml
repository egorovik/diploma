.devise_form
  %h2= t("title.edit_user")
  
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
  
    .field
      = f.label :email
      %br
      = f.email_field :email, autofocus: true, class: "form-control"
  
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: = resource.unconfirmed_email
  
    .field
      = f.label :password
      %i
        (Оставьте пустым, если не хотите изменять его)
      %br
      = f.password_field :password, autocomplete: "off", class: "form-control"
      - if @minimum_password_length
        %m= "Минимум #{@minimum_password_length} символов"
  
    .field
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
  
    .field
      = f.label :current_password
      %i
        (необходим для применения изменений)
      %br
      = f.password_field :current_password, autocomplete: "off", class: "form-control"
  
    .actions.submit-button
      = f.submit t("button.update"), class: "btn btn-success"
  
  %h3= t('title.cancel_my_account')
  
  %p= button_to t('button.cancel_my_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"
  
  = link_to t("button.back"), :back, class: "btn btn-danger-my-outline"
