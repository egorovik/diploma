= form_for @student do |f|
  - if @student.errors.any?
    #error_explanation
      %h2= "#{pluralize(@student.errors.count, "error")} prohibited this student from being saved:"
      %ul
        - @student.errors.full_messages.each do |message|
          %li= message

  .form-group.half-wide
    = f.label :passport_id
    = f.text_field :passport_id, class: "form-control"
  .form-group.half-wide
    = f.label :ln
    = f.text_field :ln, class: "form-control"
  .form-group.half-wide
    = f.label :fn
    = f.text_field :fn, class: "form-control"
  .form-group.half-wide
    = f.label :sn
    = f.text_field :sn, class: "form-control"
  .form-group.half-wide
    = f.label :sex
    = f.text_field :sex, class: "form-control"
  .form-group.half-wide
    = f.label :bday
    = f.date_select :bday, class: "form-control"
  .form-group.half-wide
    = f.label :country_id
    = f.text_field :country_id, class: "form-control"
  .form-group.half-wide
    = f.label :nationality_id
    = f.text_field :nationality_id, class: "form-control"
  .form-group.half-wide
    = f.label :religion_id
    = f.text_field :religion_id, class: "form-control"
  .form-group.half-wide
    = f.label :start_date
    = f.date_select :start_date, class: "form-control"
  .form-group.half-wide
    = f.label :finish_date
    = f.date_select :finish_date, class: "form-control"
  .form-group.half-wide
    = f.label :group_id
    = f.text_field :group_id, class: "form-control"
  .form-group.half-wide
    = f.label :room_id
    = f.text_field :room_id, class: "form-control"
  .actions.submit-button
    = f.submit t('button.save'), class: "btn btn-success"
