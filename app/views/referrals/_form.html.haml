= form_for @referral do |f|
  - if @referral.errors.any?
    #error_explanation
      %h2= "#{pluralize(@referral.errors.count, "error")} prohibited this referral from being saved:"
      %ul
        - @referral.errors.full_messages.each do |message|
          %li= message

  .form-group.half-wide
    = f.label :student_id
    = f.select :student_id, options_for_select(student_options, f.object.student_id), {include_blank: false}, {class: "form-control selectpicker", 'data-live-search'=> "true", 'data-size'=> 10}
  .form-group.half-wide
    = f.label :referral_number
    = f.text_field :referral_number, class: "form-control"
  .form-group.half-wide
    = f.label :date
    = f.text_field :date, class: "form-control", id: 'referrals_form_datepicker'
  .form-group.half-wide
    = f.label :speciality_id
    = f.collection_select :speciality_id, Speciality.all, :id, :name, {include_blank: false}, {class: "form-control selectpicker", 'data-live-search'=> "true", 'data-size'=> 10}
  .form-group.half-wide
    = f.label :payment
    = f.number_field :payment, class: "form-control"
  .actions.submit-button
    = f.submit t('button.save'), class: "btn btn-success"
