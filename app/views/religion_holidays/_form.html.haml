= form_for @religion_holiday do |f|
  - if @religion_holiday.errors.any?
    #error_explanation
      %h2= "#{pluralize(@religion_holiday.errors.count, "error")} prohibited this religion_holiday from being saved:"
      %ul
        - @religion_holiday.errors.full_messages.each do |message|
          %li= message

  .form-group.half-wide
    = f.label :name
    = f.text_field :name, class: "form-control"
  .form-group.half-wide
    = f.label :date
    = f.text_field :date, class: "form-control", id: 'religion_holidays_form_datepicker'
  .form-group.half-wide
    = f.label :religion_id
    = f.collection_select :religion_id, Religion.all, :id, :name, {include_blank: false}, {class: "form-control selectpicker", 'data-live-search'=> "true", 'data-size'=> 10}
    -#= f.text_field :religion_id, class: "form-control"
  .actions.submit-button
    = f.submit t('button.save'), class: "btn btn-success"
