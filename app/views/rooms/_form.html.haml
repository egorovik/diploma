= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |message|
          %li= message

  .form-group.half-wide
    = f.label :room_number
    = f.text_field :room_number, class: "form-control"
  .form-group.half-wide
    = f.label :place_count
    = f.number_field :place_count, class: "form-control"
  .form-group.half-wide
    = f.label :floor_id
    = f.collection_select :floor_id, Floor.all, :id, :floor_number, {include_blank: false}, {class: "form-control selectpicker", 'data-live-search'=> "true", 'data-size'=> 10}
  .actions.submit-button
    = f.submit t('button.save'), class: "btn btn-success"
