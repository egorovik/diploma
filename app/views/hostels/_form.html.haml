= form_for @hostel do |f|
  - if @hostel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hostel.errors.count, "error")} prohibited this hostel from being saved:"
      %ul
        - @hostel.errors.full_messages.each do |message|
          %li= message

  .form-group.half-wide
    = f.label :name
    = f.text_field :name, class: "form-control"
  .form-group.half-wide
    = f.label :address
    = f.text_field :address, class: "form-control"
  .form-group.half-wide
    = f.label :floors_count
    = f.number_field :floors_count, class: "form-control"
  .actions.submit-button
    = f.submit t('button.save'), class: "btn btn-success"
