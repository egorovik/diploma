%h1= t("controller.#{params['controller']}.#{params["action"]}")
= link_to t('button.new.passport'), new_passport_path, class: "btn btn-success"
%table.my-table.table-striped.my-table-hover
  %thead
    %tr
      %th= t('activerecord.attributes.passport.serial')
      %th= t('activerecord.attributes.passport.number')
      %th= t('activerecord.attributes.passport.passport_type')
      %th= t('activerecord.attributes.passport.language')
      %th= t('activerecord.attributes.passport.translation')
      %th
  %tbody
    - @passports.each do |passport|
      %tr{"onclick" => "location.href='#{params['controller']}/#{passport.id}'"}
        %td= passport.serial
        %td= passport.number
        %td= passport.passport_type
        %td= passport.language
        %td= passport.translation
        %td= link_to t('button.destroy'), passport, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"


