= form_for @passport do |f|
  - if @passport.errors.any?
    #error_explanation
      %h2= "#{pluralize(@passport.errors.count, "error")} prohibited this passport from being saved:"
      %ul
        - @passport.errors.full_messages.each do |message|
          %li= message

  .form-group.half-wide
    = f.label :serial
    = f.text_field :serial, class: "form-control"
  .form-group.half-wide
    = f.label :number
    = f.text_field :number, class: "form-control"
  .form-group.half-wide
    = f.label :passport_type
    = f.text_field :passport_type, class: "form-control"
  .form-group.half-wide
    = f.label :language
    = f.text_field :language, class: "form-control"
  .form-group.half-wide
    = f.label :translation
    = f.text_field :translation, class: "form-control"
  .actions.submit-button
    = f.submit t('button.save'), class: "btn btn-success"
