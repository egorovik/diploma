%h1= t("controller.#{params['controller']}.#{params["action"]}")
= link_to t('button.new.nationality'), new_nationality_path, class: "btn btn-success"
%table.my-table.table-striped.table-condensed.my-table-hover
  %thead
    %tr
      %th= t('activerecord.attributes.nationality.name')
      %th

  %tbody
    - @nationalities.each do |nationality|
      %tr
        %td.nationality_name{'data' => {'info' => ["#{params['controller']}", "#{nationality.id}"]}}= nationality.name
        %td= link_to t('button.destroy'), nationality, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"

= will_paginate @nationalities, renderer: BootstrapPagination::Rails, previous_label: "Предыдущая", next_label: "Следующая", inner_window: 1, outer_window: 1
