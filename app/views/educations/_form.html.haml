= form_for @education do |f|
  - if @education.errors.any?
    #error_explanation
      %h2= "#{pluralize(@education.errors.count, "error")} prohibited this education from being saved:"
      %ul
        - @education.errors.full_messages.each do |message|
          %li= message

  .form-group.half-wide
    = f.label :student_id
    = f.select :student_id, options_for_select(student_options, f.object.student_id), {include_blank: false}, {class: "form-control selectpicker", 'data-live-search'=> "true", 'data-size'=> 10}
  .form-group.half-wide
    = f.label :edu_level
    = f.text_field :edu_level, class: "form-control"
  .form-group.half-wide
    = f.label :language
    = f.text_field :language, class: "form-control"
  .form-group.half-wide
    = f.label :translation
    = f.text_area :translation, class: "form-control"
  .actions.submit-button
    = f.submit t('button.save'), class: "btn btn-success"
